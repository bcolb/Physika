                android:text="Work is the area under the force curve, or the integral of Force with respect to distance." />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W = &#8747;Fds" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow6"
